<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/fr_layout_top">

    <TextView
        android:id="@+id/fr_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Nom du vin"
        android:textColor="@color/purple_700"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/fr_annee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fr_nom"
        android:layout_marginBottom="5dp"
        android:background="@drawable/pink_round_shape"
        android:fontFamily="@font/abril_fatface"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="2019"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fr_appelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fr_annee"
        android:layout_marginBottom="15dp"
        android:background="@drawable/blue_round_shape"
        android:fontFamily="@font/abril_fatface"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Appelation"
        android:textColor="@color/white"
        android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/fr_vin_img"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:layout_below="@id/fr_layout_top"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_below="@id/fr_layout_top"
        android:id="@+id/layout_center"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fr_layout_notes"
        android:layout_width="150dp"
        android:layout_height="320dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="EQUILIBRE"
            android:textColor="@color/purple_700"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fr_note_equilibre"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_square"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="HARMONIE"
            android:textColor="@color/purple_700"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fr_note_harmonie"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_square"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="PERSISTANCE"
            android:textColor="@color/purple_700"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fr_note_persistance"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_square"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="COMPLEXITE"
            android:textColor="@color/purple_700"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fr_note_complexite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_square"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_center"
        android:id="@+id/fr_layout_note_general"
        android:gravity="center">

    <TextView
        android:id="@+id/fr_note_general"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_square_pink"
        android:fontFamily="@font/abril_fatface"
        android:text="4"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/purple_700"
        android:layout_below="@id/fr_layout_note_general"
        android:id="@+id/fr_comment"></TextView>

</RelativeLayout>